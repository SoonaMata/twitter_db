CREATE TABLE users(
	user_id INTEGER PRIMARY KEY AUTOINCREMENT, 
	user_name TEXT UNIQUE, 
	user_location TEXT, 
	user_age INTEGER); 

CREATE TABLE tweet(
	user_id INTEGER, 
	tweet TEXT, 
	timestamp DATETIME DEFAULT CURRENT_TIMESTAMP);

CREATE TABLE following(
	follower_user_id INTEGER, 
	followee_user_id INTEGER);

